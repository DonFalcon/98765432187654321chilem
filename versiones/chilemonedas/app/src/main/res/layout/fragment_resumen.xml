<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="@dimen/padding_supremo"
        android:id="@+id/tvTituloResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_titulos"
        android:textAlignment="center"
        android:text="@string/titulo_home"
        android:paddingBottom="@dimen/padding_down_titulos"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorBlanco"
        />

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/tvTituloTotalMonedasResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_texto_home"
        android:text="@string/home_total_monedas_coleccionadas"
        android:paddingBottom="@dimen/padding_separador_chico_home"
        android:paddingLeft="@dimen/padding_left_titulos_home"
        />

    <TextView
        android:id="@+id/tvTotalMonedasColeccionadasResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/texto_colecciondas_home"
        android:textColor="@color/colorPrimary"
        android:text="@string/cantidad_moneda_default"
        android:paddingBottom="@dimen/padding_separagor_grande_home"
        />

    <TextView
        android:id="@+id/tvUltimasAÃ±adidasResumen"
